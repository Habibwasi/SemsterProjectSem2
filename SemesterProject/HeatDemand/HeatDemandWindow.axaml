<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SemesterProject.Views.HeatDemandWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="HeatDemand"
        Width="960" Height="660">
	<Panel>
		<Border Padding="10" Background="Gray">
			<Grid ShowGridLines="False"
				HorizontalAlignment="Stretch" 
				VerticalAlignment="Stretch"
				Background="White">
        			<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
	        		</Grid.ColumnDefinitions>
		        		<Grid.RowDefinitions>
					<RowDefinition Height="100"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Border Background="Black" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="10">
					<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Heat Demand</TextBlock>
				</Border>
                                <Border Background="DarkGray" CornerRadius="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="10">
                                        <TextBlock FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center">GRAPH?!?!?!</TextBlock>
                                </Border>
                                <Border Background="White" CornerRadius="10" Grid.Row="2" Grid.Column="0" Margin="10">
                                        <Grid ShowGridLines="False">
					        <Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<Border Background="White" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Heat Demand Data</TextBlock>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="0"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="Black">Current:</TextBlock></Border>
                                                <Border Grid.Row="2" Grid.Column="0"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="Black">Highest:</TextBlock></Border>
                                                <Border Grid.Row="3" Grid.Column="0"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="Black">Lowest:</TextBlock></Border>
                                                <Border Grid.Row="4" Grid.Column="0"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="Black">Average:</TextBlock></Border>
					</Grid>
                                </Border>
                                <Border Background="White" CornerRadius="10" Grid.Row="2" Grid.Column="1" Margin="10">
                                        <Grid ShowGridLines="False">
					        <Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<Border Background="DarkGray" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Current Heating Grid</TextBlock>
						</Border>
						<Border Background="Green" CornerRadius="10" Grid.Row="1" Grid.Column="0" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GB1</TextBlock></Border>
						<Border Background="Orange" CornerRadius="10" Grid.Row="1" Grid.Column="1" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">OB1</TextBlock></Border>
						<Border Background="Red" CornerRadius="10" Grid.Row="1" Grid.Column="2" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GM2</TextBlock></Border>
						<Border Background="Green" CornerRadius="10" Grid.Row="2" Grid.Column="0" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GB2</TextBlock></Border>
						<Border Background="Orange" CornerRadius="10" Grid.Row="2" Grid.Column="1" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">OB2</TextBlock></Border>
						<Border Background="Yellow" CornerRadius="10" Grid.Row="2" Grid.Column="2" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">EK1</TextBlock></Border>
						<Border Background="Green" CornerRadius="10" Grid.Row="3" Grid.Column="0" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GB3</TextBlock></Border>
						<Border Background="Orange" CornerRadius="10" Grid.Row="3" Grid.Column="1" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">OB3</TextBlock></Border>
						<Border Background="Yellow" CornerRadius="10" Grid.Row="3" Grid.Column="2" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">EK2</TextBlock></Border>
						<Border Background="Green" CornerRadius="10" Grid.Row="4" Grid.Column="0" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GB4</TextBlock></Border>
						<Border Background="Red" CornerRadius="10" Grid.Row="4" Grid.Column="1" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">GM1</TextBlock></Border>
						<Border Background="Yellow" CornerRadius="10" Grid.Row="4" Grid.Column="2" Margin="5"><TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">EK3</TextBlock></Border>
					</Grid>
                                </Border>
                                <Border Background="DarkGray" CornerRadius="10" Grid.Row="2" Grid.Column="3" Margin="10">
                                        <Grid ShowGridLines="False">
					        <Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
                                                <Border Background="White" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Selected Time Period</TextBlock>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="0" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="0" Margin="10">Hour</TextBlock>
                                                
                                                <Border Grid.Row="1" Grid.Column="1" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="1" Margin="10">Week</TextBlock>

                                                <Border Grid.Row="1" Grid.Column="2" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="2" Margin="10">Year</TextBlock>

                                                <Border Grid.Row="2" Grid.Column="0" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="2" Grid.Column="0" Margin="10">Day</TextBlock>

                                                <Border Grid.Row="2" Grid.Column="1" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="2" Grid.Column="1" Margin="10">Month</TextBlock>

                                                <Border Grid.Row="2" Grid.Column="2" Margin="10">
                                                        <ToggleButton IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
                                                </Border>
                                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="2" Grid.Column="2" Margin="10">Max</TextBlock>
                                                <Border Background="White" CornerRadius="10" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Selected the day:</TextBlock>
                                                </Border>
                                                <Border Background="White" CornerRadius="10" Grid.Row="4" Grid.Column="0" Margin="10">
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">DAY</TextBox>
                                                </Border>
                                                <Border Background="White" CornerRadius="10" Grid.Row="4" Grid.Column="1" Margin="10">
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">MONTH</TextBox>
                                                </Border>
                                                <Border Background="White" CornerRadius="10" Grid.Row="4" Grid.Column="2" Margin="10">
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">YEAR</TextBox>
                                                </Border>
                                        </Grid>
                                </Border>
			</Grid>
		</Border>
	</Panel>
</Window>